INPUT : 9
        -2 1 -3 4 -1 2 1 -5 4
OUTPUT:  6
------------------------------------------------------------------

// LEET code : Ques:53
// Time Complexity: O(n)


import java.util.*;
class Test{
    public static void main(String args[]){
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int a[]=new int[n];
        for(int i=0;i<n;i++){
            a[i]=s.nextInt();
        }
        int gs=a[0],cs=0;
        for(int i=0;i<n;i++){
            cs=cs+a[i];
            if(gs<cs)
            gs=cs;
            if(cs<0)
            cs=0;
        }
        System.out.println(gs);
    }
}
